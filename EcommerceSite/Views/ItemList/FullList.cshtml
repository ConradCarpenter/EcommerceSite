@model List<Item>
@{
    ViewData["Title"] = "Item Page";
}


<div class="col-xs-8 col-xs-offset-2 text-left main-body item-list">
<h1>@ViewBag.message</h1>

@if(Model.Count == 0)
{
    <h2>Sorry no Items are available</h2>

} else {
<table>
    <tr>
        <th>Item</th>
        <th>Picture</th>
        <th>Asking Price</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.ActionLink(item.Name, "Item", "ItemPage", new { itemN = item.ItemNumber })</td>
            <td><img class="item-list__picture" src="@item.ImageURL" alt="Image"/></td>
            <td>$@item.Price OBO</td>
        </tr>
    }
</table>
}
</div>