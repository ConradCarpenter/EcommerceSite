@model List<Item>
@{
    ViewData["Title"] = "Item Page";
}
<h1>@ViewBag.message</h1>

@if(Model.Count == 0)
{
    <h2>Sorry no Items are available</h2>

}
<table align="center">
    <tr>
        <th>Item</th>
        <th>Picture</th>
        <th>Asking Price</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.ActionLink(item.ItemName, "Item", "ItemPage", new { itemN = item.ItemNumber })</td>
            <td><img src="@item.ImagURL" alt="Image" style="width:30%"/></td>
            <td>$@item.Price OBO</td>
        </tr>
    }
</table>