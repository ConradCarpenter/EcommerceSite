@model List<Item>
@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="col-xs-8 col-xs-offset-2 text-left main-body cart-total">
    <h2>Total</h2>

    <table align="center">
	    <thead>
            <tr>
                <th>Item</th>
                <th>Picture</th>
                <th>Asking Price</th>
            </tr>
	    </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td><img src="@item.ImageURL" alt="Image" style="width:30%" /></td>
                    <td>$@item.Price OBO</td>
                </tr>
            }
	    </tbody>
    </table>
    
    <div class="cart-total__actions">
        <button onclick="@("window.location.href='" + @Url.Action("Checkout", "Cart") + "'");" name="name" value="@Model" class="btn btn-primary">Checkout</button>
        <span>Total: $@ViewBag.Total</span>
    </div>
</div>