@model List<Item>
@{
    ViewData["Title"] = "Shopping Cart";
}

<h2>Total</h2>

<table align="center">
    <tr>
        <th>Item</th>
        <th>Picture</th>
        <th>Asking Price</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ItemName</td>
            <td><img src="@item.ImagURL" alt="Image" style="width:30%" /></td>
            <td>$@item.Price OBO</td>
        </tr>
    }
    <tr>
        <td>
                <button onclick="@("window.location.href='" + @Url.Action("Checkout", "Cart") + "'");" name="name" value="@Model" class="btn btn-primary">Checkout</button>
        </td>
        <td></td>
        <td>Total: $@ViewBag.Total</td>
    </tr>
</table>